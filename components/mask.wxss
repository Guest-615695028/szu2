/* components/mask.wxss */

.mask {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: black;
	opacity: 0.5;
	z-index: 65534;
}

.dialog {
	box-sizing: border-box;
	width: 100%;
	overflow: hidden;
	position: fixed;
	left: 0;
	bottom: 0;
	margin: 0;
	z-index: 65535;
	background-color: white;
	border-radius: 5rpx;
}